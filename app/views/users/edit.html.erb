<h1> Edit User </h1>
<%=form_with url:"/edit_profile", method: :post, model: @user do |f|%>
    <%=f.label :username%>
    <%=f.text_field :username %>
    <br>
    <%=f.label :email%>
    <%=f.email_field :email%>
    <br>
    <%=f.label :first_name %>
    <%=f.text_field :first_name %>
    <br>
    <%=f.label :last_name%>
    <%=f.text_field :last_name %>
    <br>
    <%=f.label :age%>
    <%=f.number_field :age %>
    <br>
    <%=f.label :address%>
    <%=f.text_field :address %>
    <br>
    <%=f.label :password%>
    <%=f.password_field :password %>
    <br>
    <%=f.label :password_confirmation%>
    <%=f.password_field :password_confirmation %>
    <br>
    <%=f.label :old_password%>
    <%=f.password_field :old_password %>
    <br>
    <%=f.submit "Update User"%>
<% end %>

<%= flash[:error] if flash[:error]%>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being updated:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p> <%= link_to 'Back to User Profile', profile_path %></p>